<h2 class="my-5"><%= t('.forgot_your_password', default: "Forgot your password?") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group row flex-column">
    <div class="col-2">  
      <i class="fa fa-envelope"></i>
      <%= f.label :email, class: "col-form-label" %>
    </div>
    <div class="col-6">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit t('devise.passwords.send_reset_instructions', default: "Send me reset password instructions"), class: "btn btn-secondary" %>
  </div>
<% end %>

<div class="form-group row">
  <div class="col-sm-offset-2 col-sm-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
