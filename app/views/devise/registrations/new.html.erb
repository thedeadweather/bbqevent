<h2 class=>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group row">
  <div class="col-sm-2">  
    <i class="fa fa-envelope"></i>
    <%= f.label :email, class: "col-form-label" %>
  </div>
  <div class="col-sm-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
    <i class="fa fa-user"></i>
    <%= f.label :name, 'Имя', class: "col-form-label" %>
  </div>  
  <div class="col-sm-6">
    <%= f.email_field :name, autofocus: true, class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2">  
    <i class="fa fa-lock"></i>
    <%= f.label :password, 'Пароль', class: "col-form-label" %>
  </div>
  <div class="col-sm-6">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <small id="emailHelp" class="form-text text-muted">не менее <%= @minimum_password_length %> символов</small>
    <% end %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2">  
    <%= f.label :password_confirmation, 'Подтверждение пароля', class: "col-form-label" %>
  </div>
  <div class="col-sm-6">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
</div>

<% end %>

<div class="form-group">
  <%= render "devise/shared/links" %>
</div>
