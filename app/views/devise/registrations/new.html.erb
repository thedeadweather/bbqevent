<h2 class="my-3">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row align-items-center">
    <div class="col-sm-2 pr-0">  
      <i class="fa fa-envelope"></i>
      <%= f.label :email, class: "col-form-label" %>
    </div>
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>  

  <div class="form-group row align-items-center">
    <div class="col-sm-2 pr-0">
      <i class="fa fa-user"></i>
      <%= f.label :name, class: "col-form-label" %>
    </div>  
    <div class="col-sm-6">
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
  </div>  

  <div class="form-group row">
    <div class="col-sm-2 pr-0">  
      <i class="fa fa-lock"></i>
      <%= f.label :password, class: "col-form-label" %>
    </div>
    <div class="col-sm-6">
      <%= f.password_field :password, class: "form-control" %>
      <% if @minimum_password_length %>
        <small id="passwordHelp" class="form-text text-muted">не менее <%= @minimum_password_length %> символов</small>
      <% end %>
    </div>
  </div>  

  <div class="form-group row align-items-center">
    <div class="col-md-2 pr-0">  
      <%= f.label :password_confirmation, class: "col-form-label" %>
    </div>
    <div class="col-md-6 col-sm-8">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>  

  <div class="form-group">
    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
