<div class="row flex-column">
  
  <% if flash.any? %>
    <% flash.each do |key, value| %>
      <div class="alert alert-primary col">
        <a href="#" data-dismiss="alert" class="close">×</a>
        <ul>
          <li>
            <%= value %>
          </li>
        </ul>
      </div>
    <% end %>
  <% end %>  

  <div class="event mt-3 col">
    <div class="event-info row">
      <div class="col-md-12">
        <%= content_tag 'div', '', class: 'event-background',
          style: "background-image: url(#{asset_path('event.jpg')})" %>  

        <div class="event-info-inner row flex-column">
          <div class="col-md-6">
            <div class="event-description">
              <h1><%= @event.title %></h1>
              <h3><%= l @event.datetime, format: :short %></h3>
              <h3><small><%= link_to @event.address,
                  "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
              <p><%= @event.description %></p>
            </div>
          </div>
            <% if current_user_can_edit?(@event) %>
              <div class="buffer-top col">
                <div class="container row mb-3">
                  <%= link_to 'Изменить', edit_event_path(@event),
                    class: 'btn btn-primary btn-sm mr-3' %>
                  <%= button_to "Удалить", event_path(@event), data: { confirm: t('are_you_sure') }, method: :delete, class: "btn btn-danger btn-sm" %>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>