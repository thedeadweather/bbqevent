<% if flash.any? %>
  <% flash.each do |key, value| %>
    <div class="alert alert-primary mt-3">
      <a href="#" data-dismiss="alert" class="close">×</a>
      <ul>
        <li>
          <%= value %>
        </li>
      </ul>
    </div>
  <% end %>
<% end %>  

<div class="text-center mb-3">
  <h1><%= @user.name %></h1>  
  <%= image_tag user_avatar(@user) %>
  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to 'Редактировать профиль', edit_user_path(@user), class: "btn btn-primary" %>
    </p>
  <% end %>
</div>
<div class="row">
  <div class="col-md-12">
	  <% if @user.events.any? %> 
	    <h3 class="my-3">Организовал:</h3>
	    <div class="row">
	  	  <%= render partial: 'events/event', collection: @user.events %>
	    </div>
	  <% else %>
      <p class="buffer-top">Пользователь пока ничего не организовал</p>
	  <% end %>
  </div>
</div>